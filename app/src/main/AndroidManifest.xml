<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lady.viktoria.lightdrip">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service
            android:name="com.lady.viktoria.lightdrip.services.RealmService"
            android:enabled="true"
            android:exported="true"
            android:process=":Services" />
        <receiver
            android:name="com.lady.viktoria.lightdrip.receiver.RealmServiceRestarter"
            android:enabled="true"
            android:exported="true"
            android:label="RestartServiceWhenStopped">
            <intent-filter>
                <action android:name="com.lady.viktoria.lightdrip.services.RestartRealmService"/>
            </intent-filter>
        </receiver>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service
            android:name="com.lady.viktoria.lightdrip.services.BGMeterGattService"
            android:enabled="true"
            android:exported="true"
            android:process=":Services" />
        <receiver
            android:name="com.lady.viktoria.lightdrip.receiver.BGMeterGattServiceRestarter"
            android:enabled="true"
            android:exported="true"
            android:label="RestartServiceWhenStopped">
            <intent-filter>
                <action android:name="com.lady.viktoria.lightdrip.services.RestartBGMeterGattService"/>
            </intent-filter>
        </receiver>
        <activity
            android:name=".PreferncesActivity"
            android:label="@string/action_preferences"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lady.viktoria.lightdrip.MainActivity" />
        </activity>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="4ee637e9d32a37083732de46f9287d593e25fc63" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>