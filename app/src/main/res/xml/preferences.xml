<?xml version="1.0" encoding="utf-8"?>


<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="General Setup">

        <EditTextPreference
        android:title="Transmitter ID"
        android:key="transmitter_id"
        android:hint="1"
        android:inputType="textCapCharacters|textNoSuggestions" />

    </PreferenceCategory>


    <PreferenceCategory android:title="Bluetooth Setup">

        <com.lady.viktoria.lightdrip.BluetoothDevicePreference
        android:dialogTitle="Select BT device"
        android:key="bt_device"
        android:title="BT Device"
        android:defaultValue="false" />

    </PreferenceCategory>


</PreferenceScreen>